<%- include('../partials/header.ejs') %>
<main>
<form class="new-flight" method="POST" action="/flights">
    <label for="airline">Airline</label>
        <select name="airline" class="form-control">
            <% airlineOptions.forEach(item => {%>
            <option value="<%= item %>"><%= item %></option>
            <% }) %>
        </select>
    <br><br>
    <label for="airport">Departure Airport</label>
        <select name="airport" class="form-control">
            <% airportOptions.forEach(item => {%>
            <option value="<%= item %>"><%= item %></option>
            <% }) %>
        </select>
   <br><br>
    <label for="flightNo">Flight Number</label>
        <input name="flightNo" type="text" class="form-control" minlength="2" maxlength="4" pattern="[0-9]{2,4}" required />
        <small>[required] between 10 and 9999</small>
    <br><br>
    <label for="departs">Departure Time</label>
        <input name="departs" type="datetime-local" value="<%= departs %>" class="form-control" />
    <br><br>
    <button class="btn btn-primary" type="submit">Add a Flight</button>
</form>
</main>
<%- include('../partials/footer.ejs') %>